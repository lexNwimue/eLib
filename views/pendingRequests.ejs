<%- include('./layouts/admin_layout/header.ejs') %>
    <%- include('./layouts/admin_layout/sidebar.ejs') %>

        <body class="skin-blue">
            <div class="wrapper">
                <div class="content-wrapper" style="min-height: 1283px;">
                    <!-- Content Header (Page header) -->
                    <section class="content-header">
                        <h1>
                            Admin Dashboard > Requests
                        </h1>
                        <ol class="breadcrumb">
                            <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
                            <li class="active">Dashboard</li>
                        </ol>
                    </section>

                    <!-- Main content -->
                    <section class="content">
                        <%- include('./layouts/admin_layout/content-head.ejs') %>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="box">
                                        <div class="box-header">
                                        </div><!-- /.box-header -->
                                        <div class="box-body ">
                                            <ul class="nav nav-tabs">
                                                <li class="nav-item active">
                                                    <a href="#all-users" class="nav-link" data-toggle="tab">All Requests</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a href="#owing-users" class="nav-link" data-toggle="tab">Approved Requests</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a href="#non-owing-users" class="nav-link"
                                                        data-toggle="tab">Cancelled Request</a>
                                                </li>
                                            </ul>

                                            <!-- Tab Panes -->
                                            <div class="tab-content">
                                                <div class="tab-pane active" id="all-users">
                                                    <table  id="requests-table"
                                                            class="table table-bordered table-striped responsive table-hover">
                                                <thead>
                                                    <tr>
                                                        <th class="text-center">S/N</th>
                                                        <th class="text-center">User</th>
                                                        <th class="text-center">Book Requested</th>
                                                        <th class="text-center">Date</th>
                                                        <th class="text-center">Request Status</th>
                                                        <th class="text-center">Action</th>
                                                        
                                                    </tr>
                                                </thead>
                                                <tbody>
                                            <% var i=1; if (userRequests.length !==0) {%>
                                                <% try { userRequests.forEach(request=> { %>

                                                    <tr>
                                                        <td>
                                                            <%= i++; %>
                                                        </td>
                                                        <td>
                                                            <%= request.username %>
                                                        </td>
                                                        <td>
                                                            <%= request.bookTitle %>
                                                        </td>
                                                        <td>
                                                            <%= request.createdAt.toLocaleDateString() %>
                                                        </td>
                                                        <td>
                                                            <%= request.status %>
                                                        </td>

                                                                                                                <td class="text-center">
                                                            <div class="btn-group">
                                                                <button id="<%= request._id %>"
                                                                    class="btn btn-success"
                                                                    data-toggle="modal"
                                                                    data-target="#delete-book-modal">
                                                                    <span class="fa fa-check delete-span"></span>
                                                                </button>
                                                                <a class="btn btn-info" target="blank" href="/dashboard/view-request/<%=request._id%>"><i
                                                                    class="fa fa-eye"></i>
                                                                    
                                                                </a>
                                                                <button id="<%= request._id %>" class="btn btn-danger delete-book">
                                                                    <span class="fa fa-remove"></span>
                                                                </button>
                                                            </div>
                                                        </td>

                                                    </tr>

                                                    <% });} catch (err) { }} %>
                                        </tbody>
                                                </table>
                                            </div>
                                                <div class="tab-pane container fade" id="owing-users">Owing Users</div>
                                                <div class="tab-pane container fade" id="non-owing-users">Non-Owing
                                                    Users
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- /.box-body -->
                                </div>
                            </div>
                    </section><!-- /.content -->
                </div>
                <%- include('./layouts/admin_layout/footer.ejs') %>
        </body>

        </html>