<%- include('./layouts/user_layout/header.ejs') %>
    <%- include('./layouts/user_layout/sidebar.ejs') %>

        <body class="skin-blue">
            <div class="wrapper">
                <div class="content-wrapper" style="min-height: 1283px;">
                    <!-- Content Header (Page header) -->
                    <section class="content-header">
                        <h1>
                            Update Details
                        </h1>
                        <ol class="breadcrumb">
                            <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
                            <li class="active">Dashboard</li>
                        </ol>
                    </section>

                    <!-- Main content -->
                    <section class="content">
                        <%- include('./layouts/user_layout/content-head.ejs') %>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="box box-primary">
                                        <div class="box-header">
                                            <h4>Update User Details</h4>
                                        </div>
                                        <div class="box-body ">
                                            <form method="post" name="myform" class="signup_validate mr-5 ml-5"
                                                action="/user/signup">
                                                <div class="form-group">
                                                    <label>Name</label>
                                                    <input type="text" class="form-control"
                                                        placeholder="Enter your full name..." name="name" required>
                                                </div>
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <input type="email" class="form-control"
                                                        placeholder="hello@example.com" name="email" required>
                                                </div>

                                                <div class="text-center mt-4">
                                                    <button type="submit"
                                                        class="btn btn-success btn-block signup-btn">Update</button>
                                                </div>

                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </div>

                    </section><!-- /.content -->
                </div>

                <%- include('./layouts/user_layout/footer.ejs') %>
        </body>

        </html>